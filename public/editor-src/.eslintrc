{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "worker": true,
    "jquery": true
  },
  "globals": {
    "TARGET": "readonly",
    "IS_EDITOR": "readonly",
    "IS_PREVIEW": "readonly",
    "__CONFIG__": "readonly",
    "YT": "readonly"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "react/prop-types": 0,
    "no-prototype-builtins": 0,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "settings": {
    "react": {
      "version": "16.8.6"
    },
    "import/resolver": {
      "webpack": {
        "config": "./webpack.config.editor.js"
      }
    },
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  },
  "overrides": [{
    "parser":  "@typescript-eslint/parser",
    "files": ["**/*.ts", "**/*.tsx"],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
      "react/prop-types": "off"
    }
  }]
}
